@model AllMoviesIndexViewModel

@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="background-color: #2c2c2c; color: #f1f1f1;">
        <h3 class="text-danger fw-bold mb-3">Are you sure you want to delete this movie?</h3>

        <div class="d-flex gap-4">
            <img src="@Model.ImageUrl"
                 alt="@Model.Title"
                 class="rounded"
                 style="width: 200px; height: 280px; object-fit: cover;">

            <div class="flex-grow-1">
                <h4 class="fw-bold text-warning mb-2">@Model.Title</h4>
                <p><strong>Genre:</strong> @Model.Genre</p>
                <p><strong>Director:</strong> @Model.Director</p>
                <p><strong>Release Date:</strong> @Model.ReleaseDate</p>
            </div>
        </div>

        <hr class="border-secondary mt-4" />

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-3 d-flex gap-3">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Yes, delete
            </button>

            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>
