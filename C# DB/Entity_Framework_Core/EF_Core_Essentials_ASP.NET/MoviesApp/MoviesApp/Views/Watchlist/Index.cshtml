@model IEnumerable<AllMoviesIndexViewModel>

@{
    ViewData["Title"] = "My Watchlist";

    bool hasMovies = Model != null && Model.Any();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-light fw-bold">My Watchlist</h1>

        <a asp-controller="Movies"
           asp-action="Index"
           class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Movies
        </a>
    </div>

    @if (!hasMovies)
    {
        <div class="alert alert-info">
            Your watchlist is empty. Go to
            <a asp-controller="Movies" asp-action="Index">Movies</a>
            and add some titles.
        </div>
    }
    else
    {
        <div class="d-flex flex-column gap-2">
            @foreach (var movie in Model)
            {
                <div class="card shadow-lg border-0 rounded-3 d-flex flex-row align-items-center p-2"
                     style="height: 140px; max-height: 140px;">

                    <img src="@movie.ImageUrl" class="rounded"
                         alt="@movie.Title"
                         style="width: 100px; height: 130px; object-fit: cover;">

                    <div class="card-body ms-3 p-2 text-light" style="flex-grow: 1;">
                        <h6 class="fw-bold mb-1 text-dark">@movie.Title</h6>
                        <p class="text-muted mb-0" style="font-size: 0.85rem;">
                            <strong>Genre:</strong> @movie.Genre |
                            <strong>Director:</strong> @movie.Director
                        </p>
                        <p class="text-muted mb-1" style="font-size: 0.85rem;">
                            <strong>Released:</strong> @movie.ReleaseDate
                        </p>
                    </div>

                    <div class="me-3 d-flex gap-2">
                        <a asp-controller="Movies"
                           asp-action="Details"
                           asp-route-id="@movie.Id"
                           class="btn btn-outline-primary btn-sm rounded-pill px-3">
                            <i class="bi bi-eye"></i> View Details
                        </a>

                        <form asp-controller="Watchlist"
                              asp-action="Remove"
                              method="post"
                              class="d-inline">
                            <input type="hidden" name="id" value="@movie.Id" />
                            <button type="submit"
                                    class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                <i class="bi bi-x-circle"></i> Remove
                            </button>
                        </form>

                    </div>
                </div>
            }
        </div>
    }
</div>
